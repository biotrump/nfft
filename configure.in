# Process this file with autoconf to produce a configure script.
AC_INIT(NFFT, 3.0.0, potts@math.uni-luebeck.de)
AC_CONFIG_HEADERS([include/config.h:include/config.h.in])

AC_CONFIG_SRCDIR(include/nfft3.h)

AM_INIT_AUTOMAKE
AM_ENABLE_SHARED(no)
AC_CANONICAL_HOST

# Checks for programs.
AC_PROG_INSTALL
AC_PROG_CC
AM_PROG_LIBTOOL

# Checks for libraries.
AC_CHECK_LIB(fftw3,fftw_execute,,,)

# Checks for header files.
AC_HEADER_STDC
AC_CHECK_HEADERS(complex.h time.h stdbool.h string.h fftw3.h)

# Checks for typedefs, structures, and compiler characteristics.

# Checks for library functions.

# Additional options

AC_OUTPUT(Makefile include/Makefile util/Makefile nfft/Makefile nnfft/Makefile examples/Makefile examples/nfft/Makefile)
