# Process this file with autoconf to produce a configure script.
AC_INIT(NFFT, 3.0.0, potts@math.uni-luebeck.de)
AC_CONFIG_HEADERS([include/config.h:include/config.h.in])

AC_CONFIG_SRCDIR(include/nfft3.h)

AM_INIT_AUTOMAKE
AM_ENABLE_SHARED(no)
AC_CANONICAL_HOST

# Checks for programs.
AC_PROG_INSTALL
AC_PROG_CC
AM_PROG_LIBTOOL

# Checks for libraries.
AC_CHECK_LIB(fftw3,fftw_execute,,,)

# Checks for header files.
AC_HEADER_STDC
AC_CHECK_HEADERS(complex.h malloc.h time.h stdbool.h string.h fftw3.h)

# Checks for typedefs, structures, and compiler characteristics.

# Checks for library functions.
AC_CHECK_FUNCS([mallinfo])

# Additional options

AC_OUTPUT(Makefile \
          include/Makefile \
          util/Makefile \
          nfft/Makefile \
          nnfft/Makefile \
          nsfft/Makefile \
          mri_inh/Makefile \
          solver/Makefile \
          nfsft/Makefile \
          nfsft/obsolete/Makefile \
          nfct/Makefile \
          nfst/Makefile \
          texture/Makefile \
          examples/Makefile \
          examples/nfft/Makefile \
          examples/nnfft/Makefile \
          examples/nnfft/accuracy/Makefile \
          examples/nnfft/simple_test/Makefile \
          examples/mri/Makefile \
          examples/mri/mri2d/Makefile \
          examples/mri/mri3d/Makefile \
          examples/exp/Makefile \
          examples/nsfft/Makefile \
          examples/nfsft/Makefile
          examples/nfsft/obsolete/Makefile
          examples/fastgauss/Makefile \
          examples/texture/Makefile \
          examples/texture/test/Makefile \
